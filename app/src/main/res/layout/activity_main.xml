<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.huqian.scalabletextprj.MainActivity">

    <TextView
        android:id="@+id/view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="16dp"/>

    <com.example.huqian.scalabletextview.ScalableTextView
        android:id="@+id/view_scale_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="16dp"/>

    <com.example.huqian.scalabletextview.ScalableTextView
        android:id="@+id/view_scale_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="16dp"/>

    <Button android:id="@+id/btn_set_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="oncreate之后settext"/>
</LinearLayout>
